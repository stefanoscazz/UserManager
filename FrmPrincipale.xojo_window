#tag Events cmdModifica
	#tag Event
		Sub Action()
		  if lstUtenti.SelectedRowCount = 0 Then
		    MessageBox "seleziona un utente"
		  Else
		    FrmModifica.show
		  End
		End Sub
	#tag EndEvent
