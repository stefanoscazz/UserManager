#tag Events cmdElimina
	#tag Event
		Sub Action()
		  Dim Id as String
		  Dim sql as String
		  
		  
		  If lstUtenti.SelectedRowIndex >= 0 Then
		    Dim d As New MessageDialog               
		    Dim b As MessageDialogButton           
		    d.IconType = MessageDialog.IconTypes.Caution    
		    d.ActionButton.Caption = "Elimina"
		    d.CancelButton.Visible = True              //mostra  Cancel button
		      d.CancelButton.Caption = "Non Eliminare"
		    d.Message = "Vuoi Eliminare questo utente?"
		    d.AlternateActionButton.Visible = false 
		    
		    b = d.ShowModal                             // mostra il dialog
		    Select Case b                               // determine which button was pressed.
		    Case d.ActionButton
		      // utente ha premuto Elimina
		      Id = lstUtenti.CellValueAt(FrmPrincipale.lstUtenti.SelectedRowIndex,0)
		      lstUtenti.RemoveRowAt(lstUtenti.SelectedRowIndex)
		      sql = "DELETE FROM Utenti WHERE id= " + id
		      // Esecuzione Query 
		      App.DB.ExecuteSQL(sql)
		      
		    Case d.CancelButton
		      // Utente ha premuto non Eliminare
		    End Select
		    
		  Else
		    MessageBox "Selezionare un utente"
		  End If
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events cmdStampa
	#tag Event
		Sub Action()
		  
		  Var ps As New PrinterSetup
		  Var rpt As New Report1
		  
		  If ps.ShowPageSetupDialog Then
		    Var g As Graphics
		    g = OpenPrinterDialog(ps)
		    If g <> Nil Then
		      
		      If rpt.Run(lstUtenti, ps) Then
		        If rpt.Document <> Nil Then
		          rpt.Document.Print(g)
		        End If
		      End If
		    End If
		  End If
		  
		  
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events cmdRicerca
	#tag Event
		Sub Action()
		  Dim sql As String
		  dim rs as RowSet
		  sql = "SELECT * FROM utenti WHERE lower(Nome) like '%"+ txtRicerca.Text +   "' "
		  sql = sql + " OR lower(Cognome) like '%" + txtRicerca.Text + "' OR  lower(Email) = '" + txtRicerca.Text + "'"
		  sql = sql + " OR CAP = '" + txtRicerca.Text + "'  OR  lower(Via) = '" + txtRicerca.Text + "' OR DataDiNascita = '" + txtRicerca.Text + "'"
		  
		  rs =  App.db.SelectSQL(sql) 
		  
		  If txtRicerca.Text = "" Then
		    MsgBox "Campo ricerca vuoto"
		  ElseIf rs <> Nil and Not rs.AfterLastRow Then
		    FrmPrincipale.lstUtenti.RemoveAllRows 
		    For Each r as DatabaseRow in rs
		      FrmPrincipale.lstutenti.AddRow rs.Column("Id").StringValue,rs.Column("nome").StringValue , _
		      rs.Column("Cognome").StringValue,rs.Column("Cap").StringValue,rs.Column("Via").StringValue,rs.Column("DataDiNascita").StringValue,rs.Column("Email").StringValue
		    Next
		  End
		  
		  
		  
		End Sub
	#tag EndEvent
